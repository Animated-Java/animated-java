	"repository": {
		"type": "github",
		"url": "https://github.com/Animated-Java/animated-java"
	},
	"description": "A tool for mapmakers to easily create complex animations for Minecraft Java Edition.",
	"main": "./dist/index.js",
	"types": "./dist/src/index.d.ts",
	"private": true,
	"scripts": {
		"build:scripts": "esbuild --bundle --platform=node --outfile=dist/build.cjs --packages=external ./tools/esbuild.ts",
		"build:dev": "yarn build:scripts && node ./dist/build.cjs --mode=dev",
		"build:prod": "yarn build:scripts && node ./dist/build.cjs",
		"lint": "prettier --write .",
		"updateBBTypes": "powershell -Command \"Remove-Item -Recurse temp_bbtypes;\"; git submodule add https://github.com/SnaveSutit/blockbench-types temp_bbtypes/"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.1",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^17.0.21",
		"@types/three": "^0.148.0",
		"esbuild": "^0.17.10",
		"esbuild-plugin-svelte": "^0.1.1",
		"fs-extra": "^11.1.0",
		"js-yaml": "^4.1.0",
		"prettier": "^2.5.1",
		"svelte": "^3.50.1",
		"svelte-preprocess": "^4.10.7",
		"svelte-preprocess-esbuild": "^3.0.1",
		"typescript": "^4.5.5",
		"vue": "^3.2.33"
	},
	"dependencies": {
		"molangjs": "^1.6.0",
		"svelte-ace": "^1.0.21"
	}
