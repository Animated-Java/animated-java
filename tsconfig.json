{
	"include": ["./src/**/*", "./tools/esbuild.ts", "./eslint.config.ts", "./vitest.config.ts"],
	"exclude": ["**/node_modules/**"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"noEmit": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"paths": {
			"@svelte-components/*": ["./src/svelte-components/*"],
			"@aj/*": ["./src/*"],
			"@assets/*": ["./src/assets/*"]
		}
	}
}
