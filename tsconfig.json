{
	"include": ["src/**/*", "tools/**/*"],
	"exclude": ["**/node_modules/**"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"noEmit": true,
		"isolatedModules": true,
		"alwaysStrict": true,
		"baseUrl": "."
	}
}
